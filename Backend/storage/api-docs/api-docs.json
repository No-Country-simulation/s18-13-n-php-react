{
    "openapi": "3.0.0",
    "info": {
        "title": "Ecommerce de productos orgánicos",
        "description": "Documentación para la API de ecommerce de productos orgánicos",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://backend-raices.vercel.app/api/api",
            "description": "Servidor de producción"
        },
        {
            "url": "http://localhost:8000/api",
            "description": "Servidor local de desarrollo"
        }
    ],
    "paths": {
        "/login_user": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Iniciar sesión",
                "operationId": "372021241e2412af4ec72b892a6ccecf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "identifier",
                                    "password"
                                ],
                                "properties": {
                                    "identifier": {
                                        "description": "Nombre de usuario o email",
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "example1": {
                                    "identifier": "example@example.com",
                                    "password": "password"
                                },
                                "example2": {
                                    "identifier": "johndoe",
                                    "password": "password"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login satisfactorio"
                    },
                    "400": {
                        "description": "Los datos ingresados son incorrectos"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/log_out": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Cerrar sesión",
                "description": "Este endpoint cierra la sesión del usuario. Se requiere autenticación.",
                "operationId": "c75a370123a31c1644f9269d5f242b77",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada"
                    },
                    "401": {
                        "description": "No autorizado, el usuario no está autenticado"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/create_user": {
            "post": {
                "tags": [
                    "User Management"
                ],
                "summary": "Crear usuario",
                "operationId": "d676f731a4ff54b59ad5a9b3577a6a2e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "username",
                                    "name",
                                    "lastname",
                                    "password",
                                    "type_user",
                                    "phone_number",
                                    "gender",
                                    "birth_date"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "lastname": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "type_user": {
                                        "type": "integer"
                                    },
                                    "phone_number": {
                                        "type": "string"
                                    },
                                    "gender": {
                                        "type": "string"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "picture": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario creado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/create_product": {
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Crear producto",
                "operationId": "3c18b7da48bee76b1e0e172161332c13",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "description",
                                    "price",
                                    "category_id",
                                    "status",
                                    "stock",
                                    "is_featured"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Nombre del producto",
                                        "type": "string"
                                    },
                                    "description": {
                                        "description": "Descripción del producto",
                                        "type": "string"
                                    },
                                    "price": {
                                        "description": "Precio del producto",
                                        "type": "number",
                                        "format": "float"
                                    },
                                    "category_id": {
                                        "description": "ID de la categoría",
                                        "type": "integer"
                                    },
                                    "status": {
                                        "description": "Estado del producto",
                                        "type": "string"
                                    },
                                    "stock": {
                                        "description": "Cantidad en stock",
                                        "type": "integer"
                                    },
                                    "is_featured": {
                                        "description": "¿Es un producto destacado?",
                                        "type": "boolean"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "name": "Producto Ejemplo",
                                "description": "Descripción del producto ejemplo.",
                                "price": 99.99,
                                "category_id": 1,
                                "status": "disponible",
                                "stock": 100,
                                "is_featured": 1
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Producto creado exitosamente"
                    },
                    "400": {
                        "description": "Los datos ingresados son incorrectos"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/delete_product/{id}": {
            "delete": {
                "tags": [
                    "Products"
                ],
                "summary": "Eliminar producto",
                "operationId": "d599aeae3160bc5dfc2779311718149d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "description": "ID del producto a eliminar",
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Producto eliminado exitosamente"
                    },
                    "404": {
                        "description": "Producto no encontrado"
                    },
                    "400": {
                        "description": "Error en la solicitud"
                    }
                }
            }
        },
        "/update_product/{id}": {
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Actualizar producto, posdata poner también _method put en POSTMAN",
                "operationId": "46b305813301b64e6385cbbb255d3add",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "description": "ID del producto a actualizar",
                            "type": "integer"
                        }
                    },
                    {
                        "name": "_method",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "description": "Método para la actualización, debe ser 'PUT'",
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "description",
                                    "price",
                                    "category_id",
                                    "status",
                                    "stock",
                                    "is_featured"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Nombre del producto",
                                        "type": "string"
                                    },
                                    "description": {
                                        "description": "Descripción del producto",
                                        "type": "string"
                                    },
                                    "price": {
                                        "description": "Precio del producto",
                                        "type": "number",
                                        "format": "float"
                                    },
                                    "category_id": {
                                        "description": "ID de la categoría",
                                        "type": "integer"
                                    },
                                    "status": {
                                        "description": "Estado del producto",
                                        "type": "string"
                                    },
                                    "stock": {
                                        "description": "Cantidad en stock",
                                        "type": "integer"
                                    },
                                    "is_featured": {
                                        "description": "¿Es un producto destacado?",
                                        "type": "boolean"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "name": "Producto Actualizado",
                                "description": "Descripción actualizada del producto.",
                                "price": 79.99,
                                "category_id": 2,
                                "status": "available",
                                "stock": 50,
                                "is_featured": false
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Producto actualizado exitosamente"
                    },
                    "404": {
                        "description": "Producto no encontrado"
                    },
                    "400": {
                        "description": "Los datos ingresados son incorrectos"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Ingrese el token",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "User Management",
            "description": "User Management"
        },
        {
            "name": "Products",
            "description": "Products"
        }
    ]
}