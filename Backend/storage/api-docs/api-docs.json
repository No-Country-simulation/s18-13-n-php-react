    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Registra un usuario cliente",
                "operationId": "2d21e359fe383ed65e6eade8f537bb58",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "username",
                                    "firstname",
                                    "lastname",
                                    "password",
                                    "type_user",
                                    "phone_number",
                                    "gender",
                                    "birth_date"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "firstname": {
                                        "type": "string"
                                    },
                                    "lastname": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario creado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Iniciar sesión",
                "operationId": "a18fa152592f54ccf7546ec09758a011",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "identifier",
                                    "password"
                                ],
                                "properties": {
                                    "identifier": {
                                        "description": "Nombre de usuario o email",
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "example1": {
                                    "identifier": "example@example.com",
                                    "password": "password"
                                },
                                "example2": {
                                    "identifier": "johndoe",
                                    "password": "password"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login satisfactorio"
                    },
                    "400": {
                        "description": "Los datos ingresados son incorrectos"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Cerrar sesión",
                "description": "Este endpoint cierra la sesión del usuario. Se requiere autenticación.",
                "operationId": "ac817d384aac3f7824a06cb3e840b18d",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada"
                    },
                    "401": {
                        "description": "No autorizado, el usuario no está autenticado"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Obtener lista de productos con filtros opcionales",
                "operationId": "587d0ee06062d7a6f45821aa7a92bf88",
                "parameters": [
                    {
                        "name": "category_id",
                        "in": "query",
                        "description": "ID de la categoría",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Estado del producto (available, unavailable, etc.)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "available",
                            "enum": [
                                "available",
                                "unavailable",
                                "out of stock",
                                "discontinued"
                            ]
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página para paginación",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Cantidad de productos por página",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de productos obtenida exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "description": "ID del producto",
                                                "type": "integer"
                                            },
                                            "name": {
                                                "description": "Nombre del producto",
                                                "type": "string"
                                            },
                                            "description": {
                                                "description": "Descripción del producto",
                                                "type": "string"
                                            },
                                            "price": {
                                                "description": "Precio del producto",
                                                "type": "number",
                                                "format": "float"
                                            },
                                            "category_id": {
                                                "description": "ID de la categoría",
                                                "type": "integer"
                                            },
                                            "status": {
                                                "description": "Estado del producto",
                                                "type": "string"
                                            },
                                            "stock": {
                                                "description": "Cantidad en stock",
                                                "type": "integer"
                                            },
                                            "is_featured": {
                                                "description": "¿Es un producto destacado?",
                                                "type": "boolean"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No se encontraron productos"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Crear producto",
                "operationId": "04bc69298c3631ccb7ea8e490088a9a4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
