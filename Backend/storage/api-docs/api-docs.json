{
    "openapi": "3.0.0",
    "info": {
        "title": "Ecommerce de productos orgánicos",
        "description": "Documentación para la API de ecommerce de productos orgánicos",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://backend-raices.vercel.app/api/api",
            "description": "Servidor de producción"
        },
        {
            "url": "http://localhost:8000/api",
            "description": "Servidor local de desarrollo"
        }
    ],
    "paths": {
        "/login_user": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Iniciar sesión",
                "operationId": "372021241e2412af4ec72b892a6ccecf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "producer_user"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "StrongTrainerPassword123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login satisfactorio"
                    },
                    "400": {
                        "description": "Los datos ingresados son incorrectos"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/log_out": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Cerrar sesión",
                "description": "Este endpoint cierra la sesión del usuario. Se requiere autenticación.",
                "operationId": "c75a370123a31c1644f9269d5f242b77",
                "responses": {
                    "200": {
                        "description": "Sesión cerrada"
                    },
                    "401": {
                        "description": "No autorizado, el usuario no está autenticado"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/create_user": {
            "post": {
                "tags": [
                    "User Management"
                ],
                "summary": "Crear usuario",
                "operationId": "d676f731a4ff54b59ad5a9b3577a6a2e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "username",
                                    "name",
                                    "lastname",
                                    "password",
                                    "type_user",
                                    "phone_number",
                                    "gender",
                                    "birth_date"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "lastname": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "type_user": {
                                        "type": "integer"
                                    },
                                    "phone_number": {
                                        "type": "string"
                                    },
                                    "gender": {
                                        "type": "string"
                                    },
                                    "birth_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "picture": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario creado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Ingrese el token",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "User Management",
            "description": "User Management"
        }
    ]
}